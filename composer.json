{
    "name": "nospi/oauth-microsoft",
    "description": "Log in to your Flarum forum with Microsoft",
    "keywords": [
        "flarum",
        "microsoft",
        "sso",
        "oauth",
        "login"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/xrh0905/flarum-ext-oauth-microsoft/issues",
        "source": "https://github.com/xrh0905/flarum-ext-oauth-microsoft",
        "forum": "https://example.com"
    },
    "require": {
        "flarum/core": "^1.2.0",
        "fof/oauth": "^1.3.0",
        "nospi/oauth2-microsoft": "0.1.0"
    },
    "authors": [
        {
            "name": "xrh0905",
            "homepage": "https://github.com/xrh0905"
        },
        {
            "name": "nospi",
            "homepage": "https://github.com/nospi"
        }
    ],
    "autoload": {
        "psr-4": {
            "nospi\\OAuthMicrosoft\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Log In With Microsoft",
            "category": "feature",
            "icon": {
                "name": "fab fa-microsoft",
                "backgroundColor": "#0072e3",
                "color": "#fff"
            }
        }
    }
}